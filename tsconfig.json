{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "allowJs": false,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "declaration": true
    },
    "exclude": ["./node_modules", "./test"],
    "include": ["./src"]
}
